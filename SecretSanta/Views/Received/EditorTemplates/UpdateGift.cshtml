@model ReceivedGift
@{
    Layout = "";
    ViewData.TemplateInfo.HtmlFieldPrefix = null;
}

<div class="modal-dialog text-start">
    <div class="modal-content">
        <form asp-controller="Received" asp-action="Save" method="post" enctype="multipart/form-data">
            <input asp-for="Id" />
            <input asp-for="To" />
            <div class="modal-header">
                <h5 class="modal-title">Update Received Gift</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" />
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label asp-for="From" class="form-label"></label>
                    <input asp-for="From" class="form-control" readonly />
                </div>
                <div class="mb-3">
                    <label asp-for="Description" class="form-label"></label>
                    <textarea asp-for="Description" class="form-control"></textarea>
                    <span asp-validation-for="Description"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="ImageUpload" class="form-label"></label>
                    <input asp-for="ImageUpload" type="file" class="form-control" />
                    <span asp-validation-for="ImageUpload"></span>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
        </form>
    </div>
</div>