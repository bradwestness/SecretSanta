@model ReceivedGift
@{
    Layout = "";
    ViewData.TemplateInfo.HtmlFieldPrefix = null;
}

<div class="modal-dialog">
    <div class="modal-content">
        <form asp-controller="Received" asp-action="Save" method="post" enctype="multipart/form-data" class="form-horizontal" role="form">
            <input asp-for="Id" />
            <input asp-for="To" />

            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Update Received Gift</h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label asp-for="From" class="control-label col-sm-4"></label>
                    <div class="col-sm-8">
                        <input asp-for="From" class="form-control" readonly />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label col-sm-4"></label>
                    <div class="col-sm-8">
                        <textarea asp-for="Description" class="form-control"></textarea>
                        <span asp-validation-for="Description"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="ImageUpload" class="control-label col-sm-4"></label>
                    <div class="col-sm-8">
                        <input asp-for="ImageUpload" type="file" class="form-control" />
                        <span asp-validation-for="ImageUpload"></span>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
        </form>
    </div>
</div>