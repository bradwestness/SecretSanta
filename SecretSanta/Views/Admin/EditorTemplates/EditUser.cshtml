@model EditUserModel
@{
    Layout = "";
    ViewData.TemplateInfo.HtmlFieldPrefix = null;
}

<div class="modal-dialog">
    <div class="modal-content">
        <form asp-controller="Admin" asp-action="EditUser" method="post" class="form-horizontal" role="form">
            <input asp-for="AccountId" />
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Edit User</h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label asp-for="Email" class="control-label col-sm-4"></label>
                    <div class="col-sm-8">
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="DisplayName" class="control-label col-sm-8"></label>
                    <div class="col-sm-8">
                        <input asp-for="DisplayName" class="form-control" />
                        <span asp-validation-for="DisplayName"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Picked" class="control-label col-sm-4"></label>
                    <div class="col-sm-8">
                        <select asp-for="Picked" asp-items="Model?.PickOptions" class="form-control"></select>
                        <span asp-validation-for="Picked"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="PickedBy" class="control-label col-sm-4"></label>
                    <div class="col-sm-8">
                        <input asp-for="PickedBy" class="form-control" readonly />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="DoNotPick" class="control-label col-sm-4"></label>
                    <div class="col-sm-8">
                        <select asp-for="DoNotPick" asp-items="Model?.DoNotPickOptions" class="form-control" multiple></select>
                        <span asp-validation-for="DoNotPick"></span>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary">Save Changes</button>
            </div>
        </form>
    </div>
</div>