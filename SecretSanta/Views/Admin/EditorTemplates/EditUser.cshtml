@model EditUserModel
@{
    Layout = "";
    ViewData.TemplateInfo.HtmlFieldPrefix = null;
}

<div class="modal-dialog">
    <div class="modal-content">
        @using (Html.BeginForm("EditUser", "Admin", FormMethod.Post, new {role = "form", @class = "form-horizontal"}))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.AccountId)
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Edit User</h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    @Html.LabelFor(m => m.Email, new {@class = "control-label col-sm-4"})
                    <div class="col-sm-8">
                        @Html.EditorFor(m => m.Email)
                        @Html.ValidationMessageFor(m => m.Email)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.DisplayName, new {@class = "control-label col-sm-4"})
                    <div class="col-sm-8">
                        @Html.TextBoxFor(m => m.DisplayName, new {@class = "form-control"})
                        @Html.ValidationMessageFor(m => m.DisplayName)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Picked, new {@class = "control-label col-sm-4"})
                    <div class="col-sm-8">
                        @Html.DropDownListFor(m => m.Picked, Model?.PickOptions, "", new {@class = "form-control"})
                        @Html.ValidationMessageFor(m => m.Picked)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.PickedBy, new { @class = "control-label col-sm-4" })
                    <div class="col-sm-8">
                        @Html.DisplayFor(m => m.PickedBy, new {@class = "form-control"})
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.DoNotPick, new {@class = "control-label col-sm-4"})
                    <div class="col-sm-8">
                        @Html.ListBoxFor(m => m.DoNotPick, Model?.DoNotPickOptions, new {@class = "form-control", multiple = "multiple"})
                        @Html.ValidationMessageFor(m => m.DoNotPick)
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary">Save Changes</button>
            </div>
        }
    </div>
</div>