@model EditUserModel
@{
    Layout = "";
    ViewData.TemplateInfo.HtmlFieldPrefix = null;
}

<div class="modal-dialog">
    <div class="modal-content">
        <form asp-controller="Admin" asp-action="DeleteUser" method="post" class="form-horizontal" role="form">
            <input asp-for="AccountId" />
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Delete User</h4>
            </div>
            <div class="modal-body">
                <div class="alert alert-danger">Are you sure you want to delete this user? This cannot be undone!</div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label col-sm-4"></label>
                    <div class="col-sm-8">
                        <input asp-for="Email" class="form-control" readonly />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="DisplayName" class="control-label col-sm-4"></label>
                    <div class="col-sm-8">
                        <input asp-for="DisplayName" class="form-control" readonly />
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary btn-danger">Delete</button>
            </div>
        </form>
    </div>
</div>