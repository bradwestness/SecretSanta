@model WishlistItem
@{
    Layout = "";
    ViewData.TemplateInfo.HtmlFieldPrefix = null;
}

<div class="modal-dialog text-start">
    <div class="modal-content">
        <form asp-controller="Wishlist" asp-action="DeleteItem" method="post">
            <input asp-for="Id" />
            <div class="modal-header">
                <h5 class="modal-title">Delete Item</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" />
            </div>
            <div class="modal-body">
                <div class="alert alert-danger">Are you sure you want to delete this item? This cannot be undone!</div>
                <div class="mb-3">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" readonly />
                </div>
                <div class="mb-3">
                    <label asp-for="Description" class="form-label"></label>
                    <textarea asp-for="Description" class="form-control" readonly></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary btn-danger">Delete</button>
            </div>
        </form>
    </div>
</div>